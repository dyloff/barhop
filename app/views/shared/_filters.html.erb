
  <div class="card p-4 text-center" style="width: 25rem; height: 510px" data-controller="slider-bar-range" data-controller="slider-price-range">
    <h5 class="card-title mt-2 mb-3"><strong>Create your own </strong><strong style="color: #D94124">bar crawl</strong></h5>
    <%= form_with url: new_crawl_path, method: :get, html: { class: "row search-icon", data: { controller: "slider-price-range generate-button" } } do |f| %>
      <%= f.text_field :query, value: params[:query], class: "form-control bg-white border border-black col-12", placeholder: "Location..." %>
      <h6 class="text-center mt-4 mb-0">Price</h6>
      <div class="d-flex justify-content-center my-3">
        <input type="hidden" name="price_range[]" value="" autocomplete="off">
          <input class="tag-selector" type="checkbox" value="1" name="price_range[]" id="price_range_1">
          <label class="mx-3 pound" for="price_range_1" style="font-size: 18px;"><strong>£</strong></label>
          <input class="tag-selector" type="checkbox" value="2" name="price_range[]" id="price_range_2">
          <label class="mx-3 pound" for="price_range_2" style="font-size: 18px;"><strong>££</strong></label>
          <input class="tag-selector" type="checkbox" value="3" name="price_range[]" id="price_range_3">
          <label class="mx-3 pound" for="price_range_3" style="font-size: 18px;"><strong>£££</strong></label>
          <input class="tag-selector" type="checkbox" value="4" name="price_range[]" id="price_range_4">
          <label class="mx-3 pound" for="price_range_4" style="font-size: 18px;"><strong>££££</strong></label>
      </div>
        <!-- <%= f.select :day, ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'], { :include_blank => 'Day for crawl' },  class: "form-select select-category dropdown-item my-3"  %> -->
      <h6 class="text-center mt-4 mb-0">Venue</h6>
      <div class="d-flex justify-content-around my-3" style="padding-right: 64px;">
        <input type="hidden" name="venue_category[]" value="" autocomplete="off">
        <input class="tag-selector2" type="checkbox" value="restaurant" name="venue_category[]" id="venue_category_1">
        <label for="venue_category_1"><strong style="font-size: 28px;">🍺 + 🍕</strong></label>
        <div class="vertical-line"></div>
        <input class="tag-selector2" type="checkbox" value="bar" name="venue_category[]" id="venue_category_2">
        <label for="venue_category_2"><strong style="font-size: 28px;">🍺</strong></label>
      </div>
      <h6 class="text-center mt-3 mb-2">Number of bars</h6>
      <div class="actions" data-controller="plus-minus">
        <p class="btn round-bordered incrementer minus mx-2" data-action="click->plus-minus#minusButton" id="minus">-</p>
        <span class="mb-1" id="counter" data-plus-minus-target="numberOfBars" style="font-size: 20px;"><strong>3</strong></span>
        <p class="btn round-bordered incrementer mx-2" data-action="click->plus-minus#plusButton" id="plus">+</p>
        <div class="d-none">
          <input class="form-input select-category dropdown-item my-3" data-plus-minus-target="finalBars" name="number_of_bars" id="number_of_bars" value="3"></input>
        </div>
      </div>
      <%# f.select :number_of_bars, [3, 4, 5, 6], { :include_blank => 'Prefered number of bars' }, class: "form-select select-category dropdown-item my-3" %>
      <button class="btn btn-primary mt-2" type="submit" data-generate-button-target="button" data-action="click->generate-button#generate">
        <span class="spinner-border spinner-border-sm invisible" data-generate-button-target="spinner" role="status" aria-hidden="true"></span>
         Generate
      </button>
    <% end %>
  </div>
