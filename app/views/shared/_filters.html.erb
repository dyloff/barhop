<div class="card " style="width: 18rem; height: 400px" data-controller="slider-bar-range" data-controller="slider-price-range">
  <div class="text-center">
    <h5 class="card-title mt-2">Filters</h5>
  </div>
  <div class="card-body d-flex flex-column justify-content-start">
    <div class="container px-3 ml-2">
          <%= form_with url: crawls_path, method: :get, html: { class: "d-flex search-icon" } do |f| %>
            <%= f.text_field :query,
              value: params[:query],
              class: "form-control bg-white border border-0",
              placeholder: "Location..."
            %>
          <%= submit_tag "Search", class: "btn btn-primary"%>
          <% end %>
        </div>
        <div class="d-flex flex-column">
        <div class="slider-container">
          <h6>Price range</h6>
          <input type="range" id="myRange" min="1" max="4" step="1" data-slider-price-range-target="slider">
            <div class="slider-labels">
              <span class="slider-label">£</span>
              <span class="slider-label">££</span>
              <span class="slider-label">£££</span>
              <span class="slider-label">££££</span>
            </div>
          </div>
          <ul class="list-group list-group-horizontal my-3">
            <li class="list-group-item">Mon-Thur</li>
            <li class="list-group-item">Fri-Sun</li>
          </ul>
        <div class="d-flex justify-content-center">
            <%= form_with url: new_crawl_path, method: :get, html: { class: "d-flex search-icon" } do |f| %>
              <div class="slider-container">
                <h6>Number of bars</h6>
                <input type="range" id="myRange" min="3" max="5" step="1" data-slider-bar-range-target="slider">
                <span id="sliderValue" data-slider-bar-range-target="slidernumber"></span>
                  <div class="slider-labels">
                    <span class="slider-label">3</span>
                    <span class="slider-label">4</span>
                    <span class="slider-label">5</span>
                  </div>
              </div>
            <% end %>
        </div>
    <a href="#" class="btn btn-primary">Generate</a>
        </div>
  </div>
</div>
