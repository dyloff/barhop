<div class="card px-0 bg-white rounded-30 m-2" style="min-width: 30%">
  <% if bar.image_url.present? %>
    <img class="card-img-top card-image" style="height: 100px; object-fit: cover; border-radius:30px 30px 0px 0px" src="<%= bar.image_url %>" alt="Card image cap">
    <% else %>
    <img class="card-img-top card-image" src="https://images.unsplash.com/photo-1597290282695-edc43d0e7129?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2075&q=80" alt="Card image cap">
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><strong><%= bar.name %></strong></h5>
    <% if bar.description.length > 90 %>
    <p class="card-text"><%= bar.description.truncate(90, omission: '') %>...</p>
    <% else %>
    <p class="card-text"><%= bar.description %></p>
    <% end %>
    <h6><strong><%= bar.price_range %></strong></h6>
    <h6><% bar.rating.to_i.times do  %>
      <i class="fa-solid fa-star fa-lg" style="color:#ffdd00"> <span class="icon-text"></span></i>
    <% end %>
    </h6>
  </div>
</div>
