  </div>

    <h2 class="m-1">Your Crawls:</h2>

  <% @crawls.each_with_index do |crawl, i| %>
    <div class="card">
        <div class="d-flex justify-content-between p-3">
          <% crawl.bars.each do |bar| %>
          <div class="card dashboard-card">
              <h5 class=""><%= bar.name %></h5>
              <img src="<%= bar.image_url %>" alt="" class="card-img-top img-fluid" style="max-height: 200px;">
          </div>
              <%= form_with model: @favourite, url: bar_favourites_path(bar) do |f| %>
                <div class="d-none">
                  <%= f.hidden_field(:bar, value: bar) %>
                </div>
                <%= f.submit 'Favourite', class: "btn btn-primary mx-2" %>
              <% end %>
          <% end %>
          <div class="card px-0 bg-white rounded-30" style ="overflow: hidden;">
            <%= render "shared/dashboard_map", info:@all_info[i] %>
          </div>
        </div>
    </div>
<% end %>
</div>

<div class="container">
  <div class="mt-4">
  <% @bars.each do |bar| %>
      <%= render "shared/barcards", bar: bar%>
    <% end %>
  </div>
</div>
