
<div class="d-flex justify-content-center">
  <div class="card mx-5 mt-2" style="overflow:hidden; border-radius: 35px; width:1250px">
    <%= render "shared/map" %>
  </div>
</div>

<h5 class="mt-2" style="text-align: center">Select your favorite bars</h5>
<div class="d-flex justify-content-center">
  <div class="row mt-0 d-flex justify-content-start">
    <% @all_filtered_bars.sample(@number_of_bars).each do |bar| %>
      <%= render "shared/barcards", bar: bar %>
    <% end %>
  </div>
</div>
 <div class="d-flex justify-content-center my-2">
  <button type="button" class="btn btn-primary mx-2">Confirm</button>
  <button type="button" class="btn btn-secondary">Regenerate</button>
</div>
