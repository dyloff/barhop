
<div class="d-flex justify-content-center">
  <div class="card mx-5 mt-2" style="overflow:hidden; border-radius: 35px; width:1250px">
    <%= render "shared/map" %>
  </div>
</div>

  <div class="mt-4 container barcards-container">
    <% @crawl.bars.each do |bar| %>
      <%= render "shared/barcards", bar: bar %>
    <% end %>
  </div>

 <div class="d-flex justify-content-center my-2" data-controller="reload">
  <%# <button type="button" class="btn btn-primary mx-2">Confirm</button> %>

    <%= form_with model: @crawl do |f| %>
    <div class="d-none">
      <%= f.hidden_field(:bars, value: @crawl.bars.map(&:id)) %>
      <%= f.label :crawl_name %>
      <%= f.text_field :crawl_name, value: "test" %>
      <%= f.label :completed %>
      <%= f.text_field :completed, value: false %>
      <%= f.label :public %>
      <%= f.text_field :public, value: false %>
      <%= f.label :date %>
      <%= f.date_field :date, value: Date.parse('Sat, 24 Jun 2023') %>
    </div>
    <%= f.submit 'Save this BarHop', class: "btn btn-primary mx-2" %>
  <% end %>

  <%= link_to "Back to BarHops", crawls_path, class:"active-tab" %>

</div>
