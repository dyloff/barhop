
<div class="container home-fullpage">
  <div>
    <h1 class="my-2 text-red">BarHop</h1>
    <h3 class="mb-4 text-red">Steamline your night out, discover new bars!</h3>
    <form class="search-box" action="/crawls" accept-charset="UTF-8" method="get">
      <input type="text" name="query" id="query" placeholder="Location...">
      <button type="submit" name="commit" value="Search" class="search-icon" data-disable-with="Search" style="border:0"><i class="fas fa-search"></i></button>
    </form>
  </div>
</div>
<div class="container">
  <h4 class="homepage-featured border-bottom m-4">Featured BarHop</h4>
  <div class="mt-4 barcards-container">
    <% @crawl.bars.each do |bar| %>
      <%= render "shared/barcards", bar: bar %>
    <% end %>
  </div>
</div>

<div class="container mb-3 px-0 mt-0">
  <div class="card mt-2 shadow-sm rounded-30">
    <div class="rounded-30 m-2" style="overflow:hidden">
      <%= render "shared/map" %>
    </div>
  </div>
</div>
