<div data-controller="generate-button" class="">
  <div class="" id="page" data-generate-button-target="page">
    <div class="d-flex p-4" data-controller="tabs">
      <div class="sticky">
        <%= render "shared/filters" %>
      </div>
      <div class="d-flex flex-column" style="height: 90vh">
        <div class="d-flex justify-content-center pe-4 mb-2">
          <h5 data-tabs-target="friendsButton"  data-action="click->tabs#hideShowFriends"  class="mx-2 mt-2 hoverCursor">Friends</h5>
          <h5 data-tabs-target="creatorsButton" data-action="click->tabs#hideShowCreators"  class="mt-2 activeTabIndex mx-2 hoverCursor">Creators</h5>
          <h5 data-tabs-target="publicButton"  data-action="click->tabs#hideShowPublic"  class="mx-2 mt-2 hoverCursor">Public</h5>
        </div>

        <div data-tabs-target="creatorsCards" class="index-crawls">
          <% @creators_info.shuffle.each do |info| %>
            <%= render "shared/routecards", info: info%>
          <% end %>
        </div>
        <div data-tabs-target="publicCards" class="index-crawls d-none">
          <% @public_info.each do |info| %>
            <%= render "shared/routecards", info: info%>
          <% end %>
        </div>
          <% if @friends_info.present? %>
          <div data-tabs-target="friendsCards" class="index-crawls d-none">
            <% @friends_info.shuffle.each do |info| %>
              <%= render "shared/routecards", info: info%>
            <% end %>
          </div>
          <% else %>
            <div data-tabs-target="friendsCards" class="card mx-5 d-none mt-2" style="width: 56rem;">
              <div class="card-body d-flex justify-content-around">
                <h5 class="card-title mt-2">Your friends dont have any bar crawls</h5>
                <%= link_to users_path do %>
                  <i class="fa-solid fa-user-group mt-3">+</i>
                <% end %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
  <div class="container loading-page hidden" style="height: 90vh" data-generate-button-target="spinner" id="spinner">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden"></span>
    </div>
    <h3 class="text-red">Generating your custom BarHop</h3>
  </div>
</div>

