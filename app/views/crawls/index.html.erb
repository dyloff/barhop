<div class="d-flex p-4">
  <div class="sticky">
    <%= render "shared/filters" %>
  </div>
  <div class="d-flex flex-column" style="height: 500px">
    <div class="d-flex justify-content-around pe-4 mb-2">
      <button data-index-tabs-target="creators" data-action="click->disable-button#disable" type="button" class="active-tab">Creators</button>
      <button data-index-tabs-target="friends"  data-action="click->disable-button#disable" type="button" class="btn btn-outline-primary">Friends</button>
      <button data-index-tabs-target="public"  data-action="click->disable-button#disable" type="button" class="btn btn-outline-primary">Public</button>
    </div>
   
    <div class="index-crawls">
      <% @friends_info.shuffle.each do |info| %>
        <%= render "shared/routecards", info: info%>
      <% end %>
    </div>
  </div>
</div>
