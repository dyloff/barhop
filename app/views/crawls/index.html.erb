<div class="d-flex p-4">
  <div class="sticky">
    <%= render "shared/filters" %>
  </div>
  <div class="d-flex flex-column">
    <div class="d-flex justify-content-around p-0 mb-2">
      <button type="button" class="btn btn-outline-primary">Creators</button>
      <button type="button" class="btn btn-outline-primary">Friends</button>
      <button type="button" class="btn btn-outline-primary">Public</button>
    </div>
    <div class="index-crawls">
      <% @crawls.each do |crawl| %>
        <%= render "shared/routecards", crawl: crawl %>
      <% end %>
    </div>
  </div>
</div>
